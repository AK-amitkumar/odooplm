<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- View customization on MRP -->

	    <record id="plm_component_base_tree_revision" model="ir.ui.view">
	        <field name="name">plm.component.base.tree.revision</field>
	        <field name="model">product.product</field>
	        <field name="inherit_id" ref="plm.plm_component_base_tree"/>
	        <field name="type">tree</field>
	        <field name="arch" type="xml">
                 <field name="state" position="before">
                	<field name="engineering_revision"/>
          		</field>
	 		</field>
	    </record>
	
	    <record id="plm_component_base_form_revision" model="ir.ui.view">
	        <field name="name">plm.base.component.revision</field>
	        <field name="model">product.product</field>
	        <field name="inherit_id" ref="plm.plm_component_base_form"/>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<data>
	            	<xpath expr="//field[@name='engineering_code']" position="after">
		            	<field name="engineering_revision" 	colspan="2" readonly="True"/>
	           		</xpath>
	        	</data>
	 		</field>
	    </record>
	    
        <record id="mrp_part_tree_view_where_revision" model="ir.ui.view">
            <field name="name">plm.tree.where.revision</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="plm.mrp_part_tree_view_where"/>
            <field name="arch" type="xml">
                 <field name="name" position="after">
                	<field name="engineering_revision" string="Revision"/>
          		</field>
        	</field>
        </record>
        
	    <record id="plm_component_kanban_revision" model="ir.ui.view">
	        <field name="name">plm.component.kanban.revision</field>
	        <field name="model">product.product</field>
	        <field name="inherit_id" ref="plm.plm_component_kanban"/>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<data>
	            	<xpath expr="//field[@name='description']" position="after">
		            	<field name="engineering_revision"/>
	           		</xpath>
	        	</data>
	        	<data>
	            	<xpath expr="//div[@id='prod_name_div']" position="after">
                        <div class="o_secondary">
                            <span title="Revision Number">Engineering revision:  <field name="engineering_revision"/></span>
                        </div>
	           		</xpath>
	        	</data>
	 		</field>
	    </record>
        
</data>
</openerp>