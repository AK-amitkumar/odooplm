<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- View customization on MRP -->

        <record id="plm_bom_line_tree_revision" model="ir.ui.view">
            <field name="name">plm.bom.line.tree.revision</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="plm.plm_bom_component_tree_view"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                 <field name="state" position="before">
	            	<field name="engineering_revision" readonly="True"/>
                </field>
            </field>
        </record>

        <record id="plm_bom_tree_revision" model="ir.ui.view">
            <field name="name">plm.bom.tree.revision</field>
            <field name="model">mrp.bom</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="plm.plm_bom_tree_view"/>
            <field name="arch" type="xml">
                 <field name="description" position="before">
                	<field name="engineering_revision"/>
          		</field>
        	</field>
        </record>
       
	    <record id="plm_bom_form_eng_revision" model="ir.ui.view">
	        <field name="name">plm.bom.form.eng.revision</field>
	        <field name="model">mrp.bom</field>
	        <field name="inherit_id" ref="plm.plm_bom_form_view_eng"/>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<data>
	            	<xpath expr="//field[@name='bom_line_ids']/tree/field[@name='state']" position="before">
		            	<field name="engineering_revision" readonly="True"/>
	           		</xpath>
	        	</data>
	 		</field>
	    </record>
	
	    <record id="plm_bom_form_revision" model="ir.ui.view">
	        <field name="name">plm.bom.form.revision</field>
	        <field name="model">mrp.bom</field>
	        <field name="inherit_id" ref="plm.plm_bom_form_view"/>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<data>
	                <field name="description" position="before">
	                	<field name="engineering_revision" readonly="True"/>
	                </field>
	        	</data>
	        	<data>
	            	<xpath expr="//field[@name='bom_line_ids']/tree/field[@name='state']" position="before">
		            	<field name="engineering_revision" readonly="True"/>
	           		</xpath>
	         	</data>
	 		</field>
	    </record>
    
        <record id="plm_bom_tree_where_revision" model="ir.ui.view">
            <field name="name">plm.bom.tree.where.revision</field>
            <field name="model">mrp.bom</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="plm.mrp_bom_tree_view_where"/>
            <field name="arch" type="xml">
                 <field name="description" position="before">
                	<field name="engineering_revision" string="Revision"/>
          		</field>
        	</field>
        </record>
	    
        <record id="plm_bom_tree_structure_revision" model="ir.ui.view">
            <field name="name">plm.bom.tree.structure.revision</field>
            <field name="model">mrp.bom</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="plm.plm_bom_tree_structure"/>
            <field name="arch" type="xml">
                 <field name="description" position="before">
                	<field name="engineering_revision" string="Revision"/>
          		</field>
        	</field>
        </record>
        
</data>
</openerp>