<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data> 
	
	    <record id="plm_template_tree_inherit" model="ir.ui.view">
	        <field name="name">plm.product.template.extension</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_tree_view"/>
	        <field name="type">tree</field>
	        <field name="priority" eval="15"/>
	        <field name="arch" type="xml">
	            <field name="name" position="after">
					<field name="engineering_revision" />
	            </field>
	        </field>
	    </record> 
	    
	    <record id="product_template_form_view_plm_custom_revision" model="ir.ui.view">
	        <field name="name">plm.template.form.plm.custom.revision</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="plm.product_template_form_view_plm_custom"/>
	        <field name="type">form</field>
	        <field name="arch" type="xml">
	        	<data>
	            	<xpath expr="//field[@name='engineering_code']" position="after">
	                	<label	for="engineering_revision" style="padding-left: 40px;"/>	
	                	<field name="engineering_revision" readonly="1"/> 
	           		</xpath>
	        	</data>
	 		</field>
	    </record>
	
</data>
</openerp>