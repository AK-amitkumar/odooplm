<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <menuitem id="plm_component_menu_view" name="Components View" parent="plm_menu" sequence="10"/>
    
<!-- 
            Product View 
-->
    <record model="ir.ui.view" id="plm_component_tree">
        <field name="name">plm.component</field>
        <field name="model">product.product</field>
        <field name="type">tree</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <tree string="Parts">
                <field name="name" select="True"/>
                <field name="engineering_code" select="True" />
                <field name="engineering_revision"/>
                <field name="state" select="True"/>
                <field name="description" select="True" />
                <field name="engineering_writable"  />
                <field name="engineering_material" select="True"/>
                <field name="engineering_surface" select="True"/>
                <field name="linkeddocuments"/>
                <field name="std_umc1"/>
                <field name="std_value1"/>
                <field name="std_umc2"/>
                <field name="std_value2"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="plm_component_search">
        <field name="name">plm.component</field>
        <field name="model">product.product</field>
        <field name="type">search</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
			<search string="Product">
                   <filter string="Transmitted" icon="terp-stock_symbol-selection" domain="[('state', '=', 'transmitted')]"/>
                   <filter string="Confirmed" icon="terp-stock_symbol-selection" domain="[('state', '=', 'confirmed')]"/>
                   <filter string="Released" icon="terp-stock_symbol-selection" domain="['|',('state', '=', 'released'),('state', '=', 'undermodify')]"/>
                   <filter string="Obsoleted" icon="terp-stock_symbol-selection" domain="[('state', '=', 'obsoleted')]"/>
                   <newline/>
                   <field name="name"/>
                   <field name="description"/>
                   <field name="engineering_code"/>
                   <field name="engineering_material"/>
                   <field name="engineering_surface"/>
<!-- 
                   <newline/>
                    <group expand="0" string="Extended Filters..." groups="base.group_extended">
                       <field name="pricelist_id" widget="selection" context="{'pricelist': self}"/>
                   </group>
                   <newline/>
                   <group expand="0" string="Group by..." groups="base.group_extended">
                       <filter string="Category" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'categ_id'}"/>
                       <separator orientation="vertical"/>
                       <filter string="Default UOM" icon="terp-mrp" domain="[]" context="{'group_by' : 'uom_id'}"/>
                       <separator orientation="vertical"/>
                       <filter string="Type" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type'}"/>
                   </group>
-->
                </search>
         </field>
    </record>

    <record model="ir.ui.view" id="plm_component_form">
        <field name="name">plm.component</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="type">form</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                 <page string="Engineering Infos">
                     <group colspan="8" col="8" string="Part Number Area">
                         <group colspan="4" col="4">
                             <field name="engineering_code" select="1" attrs="{'readonly':[('state','!=','draft')]}" colspan="2"/>
                             <field name="engineering_revision" readonly="True" colspan="2"/>
                         </group>
                         <newline/>
                         <group colspan="8" col="8" attrs="{'readonly':[('name','!=',False)]}">
                             <separator colspan="8" string="Technical Part Number Preset"/>
                             <field colspan="2" name="comp_type"/>
                             <field colspan="2" name="category"/>
                             <newline/>
                             <field name="auto_code1" on_change="on_change_code1(auto_code1)"/>
                             <field name="auto_code2" on_change="on_change_code3(auto_code1,auto_code2,auto_code3,comp_type)"/>
                             <field name="auto_code3" on_change="on_change_code3(auto_code1,auto_code2,auto_code3,comp_type)"/>
                             <field name="auto_code4" on_change="on_change_code4(auto_code1,auto_code2,auto_code3,auto_code4,comp_type)"/>                   			
                         </group>
                         <newline/>
                         <group colspan="8" col="8">
                             <separator colspan="8" string="Commercial Part Number Preset"/>
                             <group colspan="6" col="8" attrs="{'readonly':[('name','!=',False)]}"> 
                                 <field name="auto_code5" on_change="on_change_code5(auto_code5,auto_code6)"/>
                                 <field name="auto_code6" on_change="on_change_code5(auto_code5,auto_code6)" domain="[('auto_codeid' ,'=', auto_code5)]"/>
                                 <field name="auto_code7" on_change="on_change_code7(auto_code5,auto_code6,auto_code7)"/>
                             </group>
                             <field colspan="1" name="auto_code8" on_change="on_change_code8(auto_code5,auto_code6,auto_code7,auto_code8)" attrs="{'readonly':[('name','!=',False),('auto_code8','!=',False)]}"/>                   			
                         </group>
                     </group>
      	             <separator colspan="4" col="1" string="WorkFlow Status"/>
                     <field name="state" colspan="2"/>
                     <group col="4" colspan="2">
                         <button name="reactivate" states="obsoleted" string="Release Component" icon="gtk-apply"/>
                         <button name="obsolete" states="released" string="Obsolete Component" icon="gtk-cancel"/>
                         <button name="release" states="transmitted" string="Release Component" icon="gtk-apply"/>
                         <button name="reject" states="transmitted" string="Correct Component" icon="gtk-cancel"/>
                         <button name="transmit" states="confirmed" string="Transmit Component To Metodo" icon="gtk-go-forward"/>
                         <button name="correct" states="confirmed" string="Correct Component" icon="gtk-cancel"/>
                         <button name="confirm" states="draft" string="Confirm Component" icon="gtk-go-forward"/>
                     </group>
                     <group colspan="4" col="2" string="Normalization Area">
                         <separator string="Standard Description" colspan="4"/>
                         <field colspan="4" name="std_description" nolabel="1" on_change="on_change_stddesc(std_description)"/>
                         <newline/>
                         <separator string="Technical Infos" colspan="4"/>
                         <group colspan="8" col="8">
                             <field name="std_umc1" attrs="{'readonly':[('std_umc1','=',False)]}" />
                             <field name="std_value1" attrs="{'readonly':[('std_umc1','=',False)]}" on_change="on_change_stdvalue(std_description, std_umc1, std_value1, std_umc2, std_value2, std_umc3, std_value3)"/>
                             <field name="std_umc2"  attrs="{'readonly':[('std_umc2','=',False)]}" />
                             <field name="std_value2" attrs="{'readonly':[('std_umc2','=',False)]}" on_change="on_change_stdvalue(std_description, std_umc1, std_value1, std_umc2, std_value2, std_umc3, std_value3)"/>
                             <field name="std_umc3"  attrs="{'readonly':[('std_umc3','=',False)]}" />
                             <field name="std_value3" attrs="{'readonly':[('std_umc3','=',False)]}" on_change="on_change_stdvalue(std_description, std_umc1, std_value1, std_umc2, std_value2, std_umc3, std_value3)"/>
                         </group>
                         <group colspan="4" col="4">
                             <field name="tmp_material" colspan="2" on_change="on_change_tmpmater(tmp_material)"/>
                             <field name="tmp_surface" colspan="2" on_change="on_change_tmpsurface(tmp_surface)"/>
                         </group>
                     </group>
                     <group colspan="4" col="4">
                         <separator string="Technical Specifications" colspan="4"/>
                         <field name="engineering_material" colspan="2"/>
                         <field name="engineering_surface" colspan="2"/>
                         <newline/>
                         <field digits="(14, 3)" name="weight_net" attrs="{'readonly':[('type','=','service')]}"/>
                         <field name="uom_id"/>
                     </group>
                 </page>
                 <page string="Linked Documents">
                     <field name="linkeddocuments"/>
                 </page>
            </notebook>
        </field>
    </record>  
               
